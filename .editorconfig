# EditorConfig - https://editorconfig.org
# Cross-platform editor settings for macOS, Linux, and Windows

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[Makefile]
indent_style = tab

[*.sh]
end_of_line = lf

[*.{cmd,bat}]
end_of_line = crlf
